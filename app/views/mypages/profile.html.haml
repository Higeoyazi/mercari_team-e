.wrapper
  = render 'shared/header'
  = render 'shared/exhibit-btn'
  
  -# 以下の2行はパンくずリストを表示させるコード
  - breadcrumb :profile_mypages
  = render "shared/breadcrumbs"

  .wrapper-mypage
    .container-mypage
      = render "shared/sidebar"
      .my-page-right-content
        .my-page-right-content__top
          .my-page-right-content__top__content
            - if current_user.avatar?
              = image_tag "#{current_user.avatar}", size: '60x60'
            - else
              = image_tag '//static.mercdn.net/images/member_photo_noimage_thumb.png', size: '60x60'
            %p.username
              #{current_user.nickname}
            %span 評価
            %span.num 0
            %span 出品数
            %span.num 0
        .my-page-right-content__tabs.group
          .tab
            お知らせ
          .tab-li
            やることリスト
        %ul.my-page-right-content__main
          %li.my-page-right-content__main__column
            = image_tag "//static.mercdn.net/images/mercari_profile.png"
            .message
              .message__text 事務局から個別メッセージ「ログイン通知」
              %i.far.fa-clock
              %span.message__text-time 2 時間前
