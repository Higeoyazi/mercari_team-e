.sell-container
  %header.sell-header
    %h1.sell-header__icon
      = link_to  root_path do
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?863303983"
  %main.sell-main
    %section.sell-main__container
      .sell-product
        %div{"data-reactroot" => ""}
          .sell-product__container
            %h2.sell-product__container__head 商品の情報を入力
            = form_for @product do |f|
              .sell-product__container__form
                .upload-image
                  %h3.upload-image__head
                    出品画像
                    %span.require.upload-image__head__require 必須
                  %p 最大10枚までアップロードできます
                  = f.fields_for :product_images do |i|
                    .upload-image__box
                      .upload-image__box__drop
                        .upload-image__box__drop__display
                          %ul
                      .upload-image__box__file
                        -# =i.file_field :url, class: 'upload-image__box__file__input', type: "file"  書き換え予定
                        %input.upload-image__box__file__input{:multiple => "multiple", :name => "image", :style => "display: none;", :type => "file"}/
                        %pre.upload-image__box__file__description
                          ドラッグアンドドロップ
                          またはクリックしてファイルをアップロード
                .sell-content
                  .sell-content__title
                    %label
                      商品名
                      %span.require 必須
                    %input.sell-content__title__form{:placeholder => "商品名（必須 40文字まで)", value: ""}/
                  .sell-content__expla
                    %label
                      商品の説明
                      %span.require 必須
                    %textarea.sell-content__expla__form{:placeholder => "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", :rows => "5"}
                .sell-detail
                  %h3.sell-detail__title 商品の詳細
                  .sell-detail__form
                    .sell-detail__form__category
                      %label
                        カテゴリー
                        %span.require 必須
                      %div
                        .select-wrap
                          %i.icon-arrow-bottom
                          %select.select-default
                            %option{value: ""} ---
                            %option{value: "1"} レディース
                            %option{value: "2"} メンズ
                            %option{value: "3"} ベビー・キッズ
                            %option{value: "4"} インテリア・住まい・小物
                            %option{value: "5"} 本・音楽・ゲーム
                            %option{value: "1328"} おもちゃ・ホビー・グッズ
                            %option{value: "6"} コスメ・香水・美容
                            %option{value: "7"} 家電・スマホ・カメラ
                            %option{value: "8"} スポーツ・レジャー
                            %option{value: "9"} ハンドメイド
                            %option{value: "1027"} チケット
                            %option{value: "1318"} 自動車・オートバイ
                            %option{value: "10"} その他
                    .sell-detail__form__status
                      %label
                        商品の状態
                        %span.require 必須
                      .select-wrap
                        %i.icon-arrow-bottom
                        %select.select-default
                          %option{value: ""} ---
                          %option{value: "1"} 新品、未使用
                          %option{value: "2"} 未使用に近い
                          %option{value: "3"} 目立った傷や汚れなし
                          %option{value: "4"} やや傷や汚れあり
                          %option{value: "5"} 傷や汚れあり
                          %option{value: "6"} 全体的に状態が悪い

                .sell-deliver
                  .sell-deliver__title 
                    %h3 配送について
                    = link_to "?", "/jp/help_center/article/68/", class:"sell-deliver__title__question"
                  .sell-deliver__form
                    .sell-deliver__form__cost
                      %label
                        配送料の負担
                        %span.require 必須
                      .select-wrap
                        %i.icon-arrow-bottom
                        %select.select-default
                          %option{value: ""} ---
                          %option{value: "2"} 送料込み(出品者負担)
                          %option{value: "1"} 着払い(購入者負担)
                    .sell-deliver__form__region
                      %label
                        発送元の地域
                        %span.require 必須
                      .select-wrap
                        %i.icon-arrow-bottom
                        %select.select-default
                          %option{value: ""} ---
                          %option{value: "1"} 北海道
                          %option{value: "2"} 青森県
                          %option{value: "3"} 岩手県
                          %option{value: "4"} 宮城県
                          %option{value: "5"} 秋田県
                          %option{value: "6"} 山形県
                          %option{value: "7"} 福島県
                          %option{value: "8"} 茨城県
                          %option{value: "9"} 栃木県
                          %option{value: "10"} 群馬県
                          %option{value: "11"} 埼玉県
                          %option{value: "12"} 千葉県
                          %option{value: "13"} 東京都
                          %option{value: "14"} 神奈川県
                          %option{value: "15"} 新潟県
                          %option{value: "16"} 富山県
                          %option{value: "17"} 石川県
                          %option{value: "18"} 福井県
                          %option{value: "19"} 山梨県
                          %option{value: "20"} 長野県
                          %option{value: "21"} 岐阜県
                          %option{value: "22"} 静岡県
                          %option{value: "23"} 愛知県
                          %option{value: "24"} 三重県
                          %option{value: "25"} 滋賀県
                          %option{value: "26"} 京都府
                          %option{value: "27"} 大阪府
                          %option{value: "28"} 兵庫県
                          %option{value: "29"} 奈良県
                          %option{value: "30"} 和歌山県
                          %option{value: "31"} 鳥取県
                          %option{value: "32"} 島根県
                          %option{value: "33"} 岡山県
                          %option{value: "34"} 広島県
                          %option{value: "35"} 山口県
                          %option{value: "36"} 徳島県
                          %option{value: "37"} 香川県
                          %option{value: "38"} 愛媛県
                          %option{value: "39"} 高知県
                          %option{value: "40"} 福岡県
                          %option{value: "41"} 佐賀県
                          %option{value: "42"} 長崎県
                          %option{value: "43"} 熊本県
                          %option{value: "44"} 大分県
                          %option{value: "45"} 宮崎県
                          %option{value: "46"} 鹿児島県
                          %option{value: "47"} 沖縄県
                          %option{value: "99"} 未定
                    .sell-deliver__form__day
                      %label
                        発送までの日数
                        %span.require 必須
                      .select-wrap
                        %i.icon-arrow-bottom
                        %select.select-default
                          %option{value: ""} ---
                          %option{value: "1"} 1~2日で発送
                          %option{value: "2"} 2~3日で発送
                          %option{value: "3"} 4~7日で発送

                .sell-price
                  .sell-price__title 
                    %h3 販売価格(300〜9,999,999)
                    = link_to "?", "/jp/help_center/article/64/", class:"sell-price__title__question"
                  .sell-price__form
                    %ul.sell-price__form__lists
                      %li.sell-price__form__lists__name
                        %label.l-left
                          価格
                          %span.require 必須
                        %label.l-right
                          ¥
                          %input.input-default{:placeholder => "例）300", value: ""}/
                      %li.sell-price__form__lists__fee
                        .l-left
                          販売手数料 (10%)
                        .l-right -
                      %li.sell-price__form__lists__benefit
                        %label.l-left 販売利益
                        %label.l-right -
                .modal{:role => "dialog", :tabindex => "-1"}
                  .modal-inner
                .sell-btn-box
                  %div.sell-btn-box__attention
                    %p
                      = link_to "禁止されている出品", "/jp/help_center/getting_started/prohibited_products/"
                      、
                      = link_to "行為", "/jp/help_center/getting_started/prohibited_conduct/"

                      を必ずご確認ください。

                    %p

                      またブランド品でシリアルナンバー等がある場合はご記載ください。
                      = link_to "偽ブランドの販売", "/jp/help_center/getting_started/counterfeit_goods/"
                      は犯罪であり処罰される可能性があります。
                    %p
                      また、出品をもちまして
                      = link_to "加盟店規約", "/jp/seller_terms/"
                      に同意したことになります。
                  .sell-btn
                    %button.btn-red{:type => "submit"}
                      出品する
                    %a.btn-default.btn-gray
                      もどる
            .overlay
  %footer.sell-footer
    %nav.sell-footer__nav
      %ul.sell-footer__nav__rules
        %li
          = link_to "プライバシーポリシー", "https://www.mercari.com/jp/privacy/"
        %li
          = link_to "メルカリ利用規約", "https://www.mercari.com/jp/tos/"
        %li
          = link_to "特定商取引に関する表記", "https://www.mercari.com/jp/tokutei/"
    .sell-footer__logo
      = link_to root_path do
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?917505326", size: "80x65"
    %p
      %small © 2019 Mercari