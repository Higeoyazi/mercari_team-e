.address
  %header.header__registration
    .header__registration__box
      %h1
        = link_to "" do
          %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1881812696", alt: "mercari"}
      %nav.registration__stage
        %ol
          %li
            会員情報
            .registration__stage__bar
          %li
            電話番号認証
            .registration__stage__bar
          %li
            お届け先住所入力
            .registration__stage__bar
          %li.current-position
            支払い方法
            .registration__stage__bar
          %li#registration__finish
            完了
            .registration__stage__bar

  .forth-main
    %section.forth-main-wrapper
      .forth-main-wrapper__title 支払い方法
      = form_for @user, url: signup_index_path, method: :post, html: {class: 'forth-main-wrapper__box'} do |f|
        .forth-main-wrapper__box--inner
          = f.fields_for :credit_card do |c|
            .forth-main-wrapper__form--top
              = c.label 'カード番号', class: 'forth-main-wrapper__form--label'
              %span.forth-main-wrapper__form--require 必須
              = c.text_field :number, autofocus: true, class: 'forth-main-wrapper__form--input', placeholder: '半角数字のみ'
              %ul.creditcard-types
                %li.creditcard-types__image-top
                  = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1905591235'
                %li.creditcard-types__image-latter
                  = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1905591235'
                %li.creditcard-types__image-latter
                  = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1905591235'
                %li.creditcard-types__image-latter
                  = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1905591235'
                %li.creditcard-types__image-latter
                  = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1905591235'
                %li.creditcard-types__image-latter
                  = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1905591235'
                %li.creditcard-types__image-latter
                  = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1905591235'
            .forth-main-wrapper__form
              = c.label '有効期限', class: 'forth-main-wrapper__form--label'
              %span.forth-main-wrapper__form--require 必須
              .expiration-date-wrapper
                .expiration-date-wrapper__box
                  = c.text_field :expiration_date_month, class: 'expiration-date-wrapper__box--inner'
                  %i.fas.fa-chevron-down.expiration-date-wrapper__box--arrow
                  %span.expiration-date-wrapper__box--detail 月
                .expiration-date-wrapper__box--bottom
                  = c.text_field :expiration_date_year, class: 'expiration-date-wrapper__box--inner'
                  %i.fas.fa-chevron-down.expiration-date-wrapper__box--arrow
                  %span.expiration-date-wrapper__box--detail 年
            .forth-main-wrapper__form
              = c.label 'セキュリティコード', class: 'forth-main-wrapper__form--label'
              %span.forth-main-wrapper__form--require 必須
              = c.text_field :security_code, class: 'forth-main-wrapper__form--input', placeholder: 'カード背面4桁もしくは3桁の番号'
            .forth-main-wrapper__question
              %span.forth-main-wrapper__question--mark ?
              カード裏面の番号とは？
            = f.submit '次へ進む', class: 'forth-main-wrapper__form--btn'


