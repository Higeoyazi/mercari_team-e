.address
  %header.header__registration
    .header__registration__box
      %h1
        = link_to "" do
          %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1881812696", alt: "mercari"}
      %nav.registration__stage
        %ol
          %li
            会員情報
            .registration__stage__bar
          %li
            電話番号認証
            .registration__stage__bar
          %li.current-position
            お届け先住所入力
            .registration__stage__bar
          %li
            支払い方法
            .registration__stage__bar
          %li#registration__finish
            完了
            .registration__stage__bar

  .third-main
    %section.third-main-wrapper
      .third-main-wrapper__title 住所入力
      = form_for @user, url: step4_signup_index_path, method: :get, html: {class: 'third-main-wrapper__box'} do |f|
        .third-main-wrapper__box--inner
          = f.fields_for :profile do |p|
            .third-main-wrapper__form-top
              = p.label 'お名前', class: 'third-main-wrapper__form--label'
              %span.third-main-wrapper__form--require 必須
              = p.text_field :family_name, autofocus: true, class: 'third-main-wrapper__form--input', placeholder: '例) 山田'
              = p.text_field :first_name, autofocus: true, class: 'third-main-wrapper__form--input-margin', placeholder: '例) 彩'   
            .third-main-wrapper__form
              = p.label 'お名前カナ', class: 'third-main-wrapper__form--label'
              %span.third-main-wrapper__form--require 必須
              = p.text_field :family_name_kana, autofocus: true, class: 'third-main-wrapper__form--input', placeholder: '例) ヤマダ'
              = p.text_field :first_name_kana, autofocus: true, class: 'third-main-wrapper__form--input-margin', placeholder: '例) アヤ'
          = f.fields_for :address do |a|   
            .third-main-wrapper__form
              = a.label '郵便番号', class: 'third-main-wrapper__form--label'
              %span.third-main-wrapper__form--require 必須
              = a.text_field :postal_code, class: 'third-main-wrapper__form--input', placeholder: '例) 123-4567'
            .third-main-wrapper__form
              = a.label '都道府県', class: 'third-main-wrapper__form--label'
              %span.third-main-wrapper__form--require 必須
              .prefecture-select-wrapper
                .prefecture-select-wrapper__box
                  = a.text_field :prefecture, class: 'third-main-wrapper__form--input', placeholder: '北海道'
                  %i.fas.fa-chevron-down.prefecture-select-wrapper__box--arrow-down
            .third-main-wrapper__form
              = a.label '市区町村', class: 'third-main-wrapper__form--label'
              %span.third-main-wrapper__form--require 必須
              = a.text_field :city, class: 'third-main-wrapper__form--input', placeholder: '例) 横浜市緑区'
            .third-main-wrapper__form
              = a.label '番地', class: 'third-main-wrapper__form--label'
              %span.third-main-wrapper__form--require 必須
              = a.text_field :block, class: 'third-main-wrapper__form--input', placeholder: '例) 青山1-1-1'
            .third-main-wrapper__form
              = a.label '建物名', class: 'third-main-wrapper__form--label'
              %span.third-main-wrapper__form--option 任意
              = a.text_field :building, class: 'third-main-wrapper__form--input', placeholder: '例) 柳ビル103'
            -# .third-main-wrapper__form
            -#   = a.label '電話', class: 'third-main-wrapper__form--label'
            -#   %span.third-main-wrapper__form--option 任意
            -#   = a.text_field :phone_number, class: 'third-main-wrapper__form--input', placeholder: '09012345678'
            = f.submit '次へ進む', class: 'third-main-wrapper__form--btn'


.devise-footer
  .devise-footer__content
    %nav.devise-footer__content__nav
      = link_to 'プライバシーポリシー', '#'
      = link_to 'メルカリ利用規約', '#'
      = link_to '特定商取引に関する表記', '#'
    = link_to "#", class: 'devise-footer__content__link' do
      = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?863303983', alt: 'logo', class: 'devise-header__content__link__image', height: '65', width: '80'
    .devise-footer__content__copyright
      %small &copy; 2019 Mercari

