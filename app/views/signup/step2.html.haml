= form_for @user, builder: CustomFormBuilder, url: step3_signup_index_path, method: :get do |f|
  .user-container#step2
    %header.header__registration
      .header__registration__box
        %h1
          = link_to "" do
            =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1881812696", alt: "mercari" 
        %nav.registration__stage
          %ol
            %li.current-position
              会員情報
              .registration__stage__bar
            %li
              電話番号認証
              .registration__stage__bar
            %li
              お届け先住所入力
              .registration__stage__bar
            %li
              支払い方法  
              .registration__stage__bar
            %li#registration__finish
              完了
              .registration__stage__bar
    %main.main__input
      %h2.main__input_head
        会員情報入力
      .input_content
        .input_content__form
          .input_content__form__box#nickname
            %label.input_content__form__box__detail
              ニックネーム
            %span.input_content__form__box__necessary
              必須
            = f.text_field :nickname, {class: "form__input",id: "step1__nickname", placeholder: "例) メルカリ太郎", value: "#{@user.nickname}"}
          .input_content__form__box
            %label.input_content__form__box__detail
              メールアドレス
            %span.input_content__form__box__necessary
              必須
            = f.text_field :email, {class: "form__input",id: "step1__email", placeholder: "PC・携帯どちらでも可", value: "#{@user.email}"}
          .input_content__form__box
            %label.input_content__form__box__detail
              パスワード
            %span.input_content__form__box__necessary
              必須
            = f.password_field :password, {class: "form__input",id: "step1__password", placeholder: "6文字以上", autocomplete: "new-password"}
          .input_content__form__box
            %label.input_content__form__box__detail
              パスワード（確認）
            %span.input_content__form__box__necessary
              必須
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password_confirmation, {class: "form__input",id: "step1__password", placeholder: "6文字以上", autocomplete: "new-password"}
            .input_content__form__box
              = image_tag "https://i.gyazo.com/aeb4855b41254a0b7ba721820a02a0dc.png",alt:"Image from Gyazo" ,width: "306"
            = f.submit :次へ進む ,{class:"form-button",id:"button__step1"}
    = render "shared/devise-footer"